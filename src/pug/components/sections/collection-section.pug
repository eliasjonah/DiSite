mixin collection-section()

  section.collection
    .container
      .collection__inner
        h2.collection__header Browse by Collections
        .collection__list
          a.collection__item
            .collection__img
              +img('content', 'tagline-boy', 'jpg')
            .collection__name Collectibles
          a.collection__item
            .collection__img
              +img('content', 'tagline-girl', 'jpg')
            .collection__name Collectibles
          a.collection__item
            .collection__img
              +img('content', 'tagline-boy', 'jpg')
            .collection__name Collectibles
        a.collection__link View all