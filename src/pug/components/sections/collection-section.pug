mixin collection-section()

  section.collection
    .container
      .collection__inner
        h2.collection__header Browse by Collections
        .collection__list
          a.collection__item
            .collection__img
              +img('content', 'coll-1', 'jpg')
            .collection__name Collectibles
          a.collection__item
            .collection__img
              +img('content', 'coll-2', 'jpg')
            .collection__name Collectibles
          a.collection__item
            .collection__img
              +img('content', 'coll-3', 'jpg')
            .collection__name Collectibles
        a.collection__link View all